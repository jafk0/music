<view class="search-wrapper" catchtap="toSearch">
	<input class="search" placeholder="输入歌手名、歌曲名搜索" placeholder-style="color: #414040;" disabled placeholder-class="placeholder" />
</view>

<view class="list-title">热门歌单</view>
<scroll-view scroll-y>
		<view class="rank" ref="rank">
			<view class="toplist">
				<view>
					<view bindtap="_selectItemRank" data-data="{{item}}" class="item" wx:for="{{topList}}">
						<view class="icon">
							<image lazy-load width="100" height="100" src="{{item.picUrl}}" />
						</view>
						<view class="songlist">
							<view class="song" wx:for="{{item.songList}}">
								<text>{{index + 1}}.</text>
								<text>{{item.songname}}-{{item.singername}}</text>
							</view>
						</view>
					</view>
				</view>
				<view wx:if="{{!topList}}">
					<loading></loading>
				</view>
			</view>
		</view>
</scroll-view>